<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:text="Tabela de pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textStyle="normal|bold"
        android:layout_margin="5dp" />

    <TextView
        android:text="Pontos Extras: 10 pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/textView10"
        android:drawableLeft="@drawable/ic_star_rate_black_18dp"
        android:textAlignment="gravity"
        android:gravity="center_vertical" />

    <TextView
        android:text="Denúncia Confirmada: 6 pontos"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView11" />
    <TextView
        android:text="Denúncia falsa: -3 pontos. Recorrente: Suspensão da conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/textView13" />
    <TextView
        android:text="Validar ou invalidar informação: 2 pontos"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView12" />



</LinearLayout>