<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/cardview_shadow_end_color">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPos"
                android:layout_alignLeft="@+id/imgRank"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="57dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/perfil"
                android:id="@+id/imgRank"
                android:adjustViewBounds="true"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <TextView
                android:text="Nome do fulano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNome"
                android:elevation="1dp"
                android:layout_margin="5dp" />

            <TextView
                android:text="Brasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPais"
                android:layout_margin="5dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="1254"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPontos"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:textAlignment="center"
                    android:drawableStart="@drawable/ic_coin_black_24dp"
                    android:layout_centerHorizontal="false"
                    android:layout_toEndOf="@+id/txtPontos" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>