<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Despejo de lixo Orgânico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textNomeProd"
            android:layout_weight="0"
            android:layout_margin="5dp"
            android:textAlignment="center" />

        <ImageSwitcher
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imageSwitcher" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imgProd1"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_margin="2dp"
                app:srcCompat="@mipmap/inserir_imagem" />

            <ImageView
                android:id="@+id/imgProd2"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_margin="2dp"
                app:srcCompat="@mipmap/inserir_imagem" />

            <ImageView
                android:id="@+id/imgProd3"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_margin="2dp"
                app:srcCompat="@mipmap/inserir_imagem" />
        </LinearLayout>

        <Button
            android:text="Abrir no maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnMaps"
            android:layout_weight="0" />

        <Button
            android:text="Confirmar informação"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnConfirm"
            android:layout_weight="0"
            android:drawableLeft="@drawable/ic_check_black_24dp" />

        <Button
            android:text="Reportar Irregularidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnReport"
            android:layout_weight="0"
            android:drawableLeft="?android:attr/alertDialogIcon" />

    </LinearLayout>

</android.support.v7.widget.CardView>