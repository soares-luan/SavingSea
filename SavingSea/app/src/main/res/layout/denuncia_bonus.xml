<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Para esse desafio, você terá que tirar uma foto de algo que você julgue estranho na região;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textNomeProd"
            android:layout_weight="0"
            android:layout_margin="5dp"
            android:textAlignment="center" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:onClick="sobeImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_report_image"
                android:id="@+id/imageButton"
                android:layout_weight="1"
                android:adjustViewBounds="true" />

            <ImageButton
                android:onClick="sobeImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_report_image"
                android:id="@+id/imageButton2"
                android:layout_weight="1"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="Descreva a situação"
            android:minLines="3"
            android:layout_weight="0" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <TextView
                android:text="O que de errado foi encontrado na região?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtView"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="@color/cardview_dark_background" />

            <RadioButton
                android:text="Poluição"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdPoluicao"
                android:layout_weight="1" />

            <RadioButton
                android:text="Pesca Predatória"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdPescaPredat"
                android:layout_weight="1" />

            <RadioButton
                android:text="Pesca Destrutiva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdPescaDestr"
                android:layout_weight="1" />
        </RadioGroup>

        <Button
            android:text="Confirmar dados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCadDenuncia"
            android:background="@color/colorAccent"
            android:layout_weight="0" />

        </LinearLayout>
</android.support.v7.widget.CardView>